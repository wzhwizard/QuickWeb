<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d %p %c{1.} %X{req} %m%n%ex</Pattern>
			</PatternLayout>
		</Console>

	</Appenders>
	<Loggers>
		<Root level="info" includeLocation="false">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>